<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    card_view:cardCornerRadius="@dimen/_3sdp"
    card_view:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <RelativeLayout
            android:id="@+id/linearItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp">


            <ImageView
                android:id="@+id/imgApp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_profile" />


            <TextView
                android:id="@+id/txtTimeStamp"
                style="@style/textViewStyleRowLayout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toEndOf="@+id/imgApp"
                android:text="10.06.2020 - 1:11 AM"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTimeStamp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_toEndOf="@+id/imgApp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_10ssp"
                    android:layout_height="@dimen/_10ssp"
                    android:src="@mipmap/ic_logo" />

                <TextView
                    android:id="@+id/txtUserName"
                    style="@style/textViewStyleRowLayout"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="User Name"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:text="Title"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/txtDiscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout style="@style/viewLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLike"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@mipmap/ic_like" />

                <TextView
                    android:id="@+id/txtLike"
                    style="@style/textViewStyleRowLayout"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Like"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout style="@style/viewHoriLineStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgComment"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@mipmap/ic_comment" />

                <TextView
                    android:id="@+id/txtComment"
                    style="@style/textViewStyleRowLayout"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Comment"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout style="@style/viewHoriLineStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="@dimen/_20ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:src="@mipmap/ic_share" />

                <TextView
                    android:id="@+id/txtShare"
                    style="@style/textViewStyleRowLayout"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="Share"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/viewLineStyle" />


    </LinearLayout>


</androidx.cardview.widget.CardView>